@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Users Generator</h1>
    <p>This project uses the <a href="https://randomuser.me/">random user generator api</a> to generate users with attributes for testing purposes.</p>

   
</div>

<div class="container">
    <h2 class="">Example of randomly generated user:</h2>
    
    <div class="card text-center" style="margin: 5rem;">
        <div class="mt-3 mb-4">
            <img src="@Model.User.Pictures.Large" class="img-profile" alt="">
        </div>

        <div class="card-body">
            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="pills-name-tab" data-toggle="pill" href="#pills-name" role="tab" aria-controls="pills-name" aria-selected="true"><i class="far fa-user-circle fa-lg"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-email-tab" data-toggle="pill" href="#pills-email" role="tab" aria-controls="pills-email" aria-selected="false"><i class="fas fa-at fa-lg"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-birthday-tab" data-toggle="pill" href="#pills-birthday" role="tab" aria-controls="pills-birthday" aria-selected="false"><i class="fas fa-birthday-cake fa-lg"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-address-tab" data-toggle="pill" href="#pills-address" role="tab" aria-controls="pills-address" aria-selected="false"><i class="fas fa-map-marked-alt fa-lg"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-phone-tab" data-toggle="pill" href="#pills-phone" role="tab" aria-controls="pills-phone" aria-selected="false"><i class="fas fa-phone-alt fa-lg"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-password-tab" data-toggle="pill" href="#pills-password" role="tab" aria-controls="pills-password" aria-selected="false"><i class="fas fa-key fa-lg"></i></a>
                </li>
            </ul>
            <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade show active" id="pills-name" role="tabpanel" aria-labelledby="pills-name-tab">
                    <p class="card-text">Hi, my name is</p>
                    <h5 class="card-title">@Model.User.FullName.Title @Model.User.FullName.First @Model.User.FullName.Last </h5>
                </div>
                <div class="tab-pane fade" id="pills-email" role="tabpanel" aria-labelledby="pills-email-tab">
                    <p class="card-text">My email address is</p>
                    <h5 class="card-title">@Model.User.Email</h5>
                </div>
                <div class="tab-pane fade" id="pills-birthday" role="tabpanel" aria-labelledby="pills-birthday-tab">
                    <p class="card-text">My birthday is</p>
                    <h5 class="card-title">@Model.User.Birthday.Date</h5>
                </div>
                <div class="tab-pane fade" id="pills-address" role="tabpanel" aria-labelledby="pills-address-tab">
                    <p class="card-text">My address is</p>
                    <h5 class="card-title">@Model.User.Location.Street.StreetNumber @Model.User.Location.Street.StreetName</h5>
                    <h5 class="card-title">@Model.User.Location.PostalCode @Model.User.Location.City</h5>
                    <h5 class="card-title">@Model.User.Location.Country</h5>
                </div>
                <div class="tab-pane fade" id="pills-phone" role="tabpanel" aria-labelledby="pills-phone-tab">
                    <p class="card-text">My phone number is</p>
                    <h5 class="card-title">@Model.User.Phone</h5>
                </div>
                <div class="tab-pane fade" id="pills-password" role="tabpanel" aria-labelledby="pills-password-tab">
                    <p class="card-text">My password is</p>
                    <h5 class="card-title">@Model.User.Credentials.Password</h5>
                </div>
            </div>
        </div>

        <div class="card-footer text-muted">
            <a href="/" class="btn btn-primary">Generate new user</a>
        </div>
    </div>
</div>
